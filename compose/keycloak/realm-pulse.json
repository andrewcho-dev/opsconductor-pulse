{
  "realm": "pulse",
  "enabled": true,
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 1800,
  "roles": {
    "realm": [
      { "name": "customer",       "description": "Customer read-only viewer" },
      { "name": "tenant-admin",   "description": "Customer tenant administrator" },
      { "name": "operator",       "description": "OpsConductor operator" },
      { "name": "operator-admin", "description": "OpsConductor operator administrator" }
    ]
  },
  "clients": [
    {
      "clientId": "pulse-ui",
      "name": "pulse-ui",
      "protocol": "openid-connect",
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "pkce.code.challenge.required": "true"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ],
      "redirectUris": [
        "http://localhost:8080/*",
        "https://localhost/*",
        "http://127.0.0.1:8080/*",
        "http://192.168.10.53:8080/*",
        "https://192.168.10.53/*",
        "*"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "https://localhost",
        "http://127.0.0.1:8080",
        "http://192.168.10.53:8080",
        "https://192.168.10.53",
        "*"
      ],
      "protocolMappers": [
        {
          "name": "audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "pulse-ui",
            "id.token.claim": "false",
            "access.token.claim": "true",
            "userinfo.token.claim": "false"
          }
        },
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "false"
          }
        },
        {
          "name": "sub",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-sub-mapper",
          "consentRequired": false,
          "config": {
            "introspection.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "pulse-api",
      "name": "pulse-api",
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "secret": "pulse-api-secret-dev",
      "protocolMappers": [
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "false"
          }
        }
      ]
    }
  ],
  "smtpServer": {
    "host": "${env.SMTP_HOST}",
    "port": "${env.SMTP_PORT}",
    "from": "${env.SMTP_FROM}",
    "fromDisplayName": "${env.SMTP_FROM_DISPLAY_NAME}",
    "auth": "true",
    "user": "${env.SMTP_USERNAME}",
    "password": "${env.SMTP_PASSWORD}",
    "ssl": "${env.SMTP_SSL}",
    "starttls": "${env.SMTP_STARTTLS}"
  },
  "users": [
    {
      "username": "customer1",
      "email": "customer1@tenant-a.example.com",
      "enabled": true,
      "emailVerified": true,
      "requiredActions": [],
      "credentials": [
        { "type": "password", "value": "test123", "temporary": false }
      ],
      "attributes": {
        "tenant_id": ["acme-industrial"]
      },
      "realmRoles": ["customer", "tenant-admin"]
    },
    {
      "username": "customer2",
      "email": "customer2@tenant-b.example.com",
      "enabled": true,
      "emailVerified": true,
      "requiredActions": [],
      "credentials": [
        { "type": "password", "value": "test123", "temporary": false }
      ],
      "attributes": {
        "tenant_id": ["acme-industrial"]
      },
      "realmRoles": ["customer"]
    },
    {
      "username": "operator1",
      "email": "operator1@opsconductor.io",
      "enabled": true,
      "emailVerified": true,
      "requiredActions": [],
      "credentials": [
        { "type": "password", "value": "test123", "temporary": false }
      ],
      "attributes": {
        "tenant_id": [""]
      },
      "realmRoles": ["operator"]
    },
    {
      "username": "operator_admin",
      "email": "admin@opsconductor.io",
      "enabled": true,
      "emailVerified": true,
      "requiredActions": [],
      "credentials": [
        { "type": "password", "value": "test123", "temporary": false }
      ],
      "attributes": {
        "tenant_id": [""]
      },
      "realmRoles": ["operator", "operator-admin"]
    }
  ]
}
