# OpsConductor-Pulse â€” Environment Configuration
# Copy this file to .env and fill in real values before running.
#   cp .env.example .env
# NEVER commit .env with real values.

# Network / Hostname
HOST_IP=localhost
KEYCLOAK_URL=https://localhost
UI_BASE_URL=https://localhost

# PostgreSQL
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
PG_PASS=CHANGE_ME_strong_password_here

# Admin / Provision API keys
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
ADMIN_KEY=CHANGE_ME_generate_with_secrets_token_hex
PROVISION_ADMIN_KEY=CHANGE_ME_generate_with_secrets_token_hex

# Keycloak
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_strong_password_here
KC_DB_PASSWORD=CHANGE_ME_strong_password_here
KC_DB_USER_PASSWORD=CHANGE_ME_generate_with_secrets_token_hex
KC_HOSTNAME=localhost

# MQTT
MQTT_ADMIN_PASSWORD=CHANGE_ME_generate_with_secrets_token_hex

# SMTP (for Keycloak email flows)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_smtp_password
SMTP_FROM=noreply@example.com
SMTP_FROM_DISPLAY_NAME=OpsConductor Pulse
SMTP_SSL=false
SMTP_STARTTLS=true

# Logging
LOG_LEVEL=INFO

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
